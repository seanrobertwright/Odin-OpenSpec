<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Odin___OpenSpec.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Odin___OpenSpec"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Odin - OpenSpec">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border x:Name="NavigationSidebar"
                Grid.Column="0"
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- Header with collapse button -->
                <Grid Grid.Row="0" Padding="16,16,16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="NavigationTitle"
                              Text="Navigation" 
                              Style="{StaticResource SubheadingTextBlockStyle}"
                              Grid.Column="0"
                              VerticalAlignment="Center" />
                    
                    <Button x:Name="CollapseButton"
                            Content="&#xE76C;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Grid.Column="1"
                            Width="40"
                            Height="40"
                            Click="CollapseButton_Click"
                            ToolTipService.ToolTip="Collapse sidebar"
                            Background="Transparent"
                            BorderThickness="0" />
                </Grid>
                
                <!-- Navigation buttons -->
                <StackPanel Grid.Row="1" Padding="16,8,16,16" Spacing="8">
                
                <Button x:Name="HomeButton"
                        Content="Home" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Home" />
                
                <Button x:Name="CalendarButton"
                        Content="Calendar" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Calendar" />
                
                <Button x:Name="TasksButton"
                        Content="Tasks" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Tasks" />
                
                <Button x:Name="GroceryButton"
                        Content="Grocery" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Grocery" />
                
                <Button x:Name="WeatherButton"
                        Content="Weather" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Weather" />
                
                <Button x:Name="MusicButton"
                        Content="Music" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Music" />
                
                <Button x:Name="SettingsButton"
                        Content="Settings" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Settings"
                        Margin="0,24,0,0" />
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Collapsed sidebar (hamburger menu) -->
        <Border x:Name="CollapsedSidebar"
                Grid.Column="0"
                Width="60"
                Visibility="Collapsed"
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <StackPanel Padding="8,16,8,16" Spacing="8">
                <Button x:Name="ExpandButton"
                        Content="&#xE700;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Width="44"
                        Height="44"
                        Click="ExpandButton_Click"
                        ToolTipService.ToolTip="Expand sidebar"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Center" />
                
                <Button Content="&#xE80F;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Home"
                        ToolTipService.ToolTip="Home"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE787;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Calendar"
                        ToolTipService.ToolTip="Calendar"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE73A;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Tasks"
                        ToolTipService.ToolTip="Tasks"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE7BF;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Grocery"
                        ToolTipService.ToolTip="Grocery"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE753;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Weather"
                        ToolTipService.ToolTip="Weather"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE8D6;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Music"
                        ToolTipService.ToolTip="Music"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE713;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Settings"
                        ToolTipService.ToolTip="Settings"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,16,0,0" />
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- User Profile Section -->
                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal" 
                               Spacing="12"
                               VerticalAlignment="Center">
                        <PersonPicture x:Name="UserProfilePicture"
                                      Initials="U"
                                      DisplayName="User"
                                      Width="40"
                                      Height="40" />
                        
                        <StackPanel VerticalAlignment="Center" Spacing="2">
                            <TextBlock x:Name="UserDisplayName"
                                      Text="User"
                                      FontSize="14"
                                      FontWeight="SemiBold" />
                            <TextBlock x:Name="UserProfileSubtext"
                                      Text="Main Profile"
                                      FontSize="12"
                                      Opacity="0.7" />
                        </StackPanel>
                        
                        <Button x:Name="ProfileSwitcherButton"
                               Content="&#xE2AC;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Width="32"
                               Height="32"
                               Padding="0"
                               Background="Transparent"
                               BorderThickness="0"
                               VerticalAlignment="Center"
                               ToolTipService.ToolTip="Switch Profile">
                            <Button.Flyout>
                                <MenuFlyout x:Name="ProfileSwitcherFlyout" 
                                           Placement="BottomEdgeAlignedLeft"
                                           Opening="ProfileSwitcherFlyout_Opening">
                                    <!-- Profile list will be populated dynamically -->
                                    <MenuFlyoutItem x:Name="CreateProfileMenuItem"
                                                   Click="CreateProfile_Click"
                                                   Icon="AddFriend"
                                                   Text="Create New Profile" />
                                    <MenuFlyoutSeparator x:Name="ProfileListSeparator" Visibility="Collapsed" />
                                    <!-- Dynamic profile items go here -->
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem x:Name="EditProfileMenuItem"
                                                   Click="EditProfile_Click"
                                                   Icon="Edit"
                                                   Text="Edit Current Profile" />
                                    <MenuFlyoutItem x:Name="DeleteProfileMenuItem"
                                                   Click="DeleteProfile_Click"
                                                   Icon="Delete"
                                                   Text="Delete Current Profile" />
                                </MenuFlyout>
                            </Button.Flyout>
                            <Button.Resources>
                                <ResourceDictionary>
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemAccentColor}" Opacity="0.1" />
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemAccentColor}" Opacity="0.2" />
                                </ResourceDictionary>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                    
                    <!-- Dynamic Content Title -->
                    <TextBlock x:Name="HeaderContentTitle"
                              Grid.Column="1"
                              Text="Home"
                              FontSize="20"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                    
                    <!-- Theme and Settings Controls -->
                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal" 
                               Spacing="8"
                               VerticalAlignment="Center">
                        
                        <!-- Theme Switcher -->
                        <ComboBox x:Name="ThemeSwitcher"
                                 Width="140"
                                 Height="40"
                                 SelectedIndex="0"
                                 SelectionChanged="ThemeSwitcher_SelectionChanged"
                                 ToolTipService.ToolTip="Change Theme">
                            <ComboBoxItem Content="ðŸŒž Light" Tag="Light" />
                            <ComboBoxItem Content="ðŸŒ™ Dark" Tag="Dark" />
                            <ComboBoxItem Content="ðŸ–¥ï¸ System" Tag="Default" />
                        </ComboBox>
                        
                        <!-- Settings Button -->
                        <Button x:Name="HeaderSettingsButton"
                               Content="&#xE713;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Width="44"
                               Height="44"
                               Padding="0"
                               Background="Transparent"
                               BorderThickness="0"
                               Click="NavigationButton_Click"
                               Tag="Settings"
                               ToolTipService.ToolTip="Settings">
                            <Button.Resources>
                                <ResourceDictionary>
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemAccentColor}" Opacity="0.1" />
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemAccentColor}" Opacity="0.2" />
                                </ResourceDictionary>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <Border Grid.Row="1" Style="{StaticResource ContentAreaStyle}">
                <Frame x:Name="ContentFrame" />
            </Border>
        </Grid>
    </Grid>
</Window>
