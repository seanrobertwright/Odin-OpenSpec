<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Odin___OpenSpec.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Odin___OpenSpec"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Odin - OpenSpec">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Border Style="{StaticResource ContentAreaStyle}">
            <StackPanel Spacing="16">
                <TextBlock Text="Odin - OpenSpec" 
                          Style="{StaticResource HeadingTextBlockStyle}" />
                
                <TextBlock Text="Theme System Test" 
                          Style="{StaticResource SubheadingTextBlockStyle}" />
                
                <Border Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Welcome to your personal productivity hub!" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        
                        <Button Content="Toggle Theme" 
                               Style="{StaticResource TouchButtonStyle}"
                               Click="ToggleThemeButton_Click" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
