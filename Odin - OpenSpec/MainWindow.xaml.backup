<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Odin___OpenSpec.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Odin___OpenSpec"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Odin - OpenSpec">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border x:Name="NavigationSidebar"
                Grid.Column="0"
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- Header with collapse button -->
                <Grid Grid.Row="0" Padding="16,16,16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="NavigationTitle"
                              Text="Navigation" 
                              Style="{StaticResource SubheadingTextBlockStyle}"
                              Grid.Column="0"
                              VerticalAlignment="Center" />
                    
                    <Button x:Name="CollapseButton"
                            Content="&#xE76C;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Grid.Column="1"
                            Width="40"
                            Height="40"
                            Click="CollapseButton_Click"
                            ToolTipService.ToolTip="Collapse sidebar"
                            Background="Transparent"
                            BorderThickness="0" />
                </Grid>
                
                <!-- Navigation buttons -->
                <StackPanel Grid.Row="1" Padding="16,8,16,16" Spacing="8">
                
                <Button x:Name="HomeButton"
                        Content="Home" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Home" />
                
                <Button x:Name="CalendarButton"
                        Content="Calendar" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Calendar" />
                
                <Button x:Name="TasksButton"
                        Content="Tasks" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Tasks" />
                
                <Button x:Name="GroceryButton"
                        Content="Grocery" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Grocery" />
                
                <Button x:Name="WeatherButton"
                        Content="Weather" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Weather" />
                
                <Button x:Name="MusicButton"
                        Content="Music" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Music" />
                
                <Button x:Name="SettingsButton"
                        Content="Settings" 
                        Style="{StaticResource TouchButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="NavigationButton_Click"
                        Tag="Settings"
                        Margin="0,24,0,0" />
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Collapsed sidebar (hamburger menu) -->
        <Border x:Name="CollapsedSidebar"
                Grid.Column="0"
                Width="60"
                Visibility="Collapsed"
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <StackPanel Padding="8,16,8,16" Spacing="8">
                <Button x:Name="ExpandButton"
                        Content="&#xE700;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Width="44"
                        Height="44"
                        Click="ExpandButton_Click"
                        ToolTipService.ToolTip="Expand sidebar"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Center" />
                
                <Button Content="&#xE80F;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Home"
                        ToolTipService.ToolTip="Home"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE787;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Calendar"
                        ToolTipService.ToolTip="Calendar"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE73A;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Tasks"
                        ToolTipService.ToolTip="Tasks"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE7BF;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Grocery"
                        ToolTipService.ToolTip="Grocery"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE753;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Weather"
                        ToolTipService.ToolTip="Weather"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE8D6;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Music"
                        ToolTipService.ToolTip="Music"
                        Background="Transparent"
                        BorderThickness="0" />
                
                <Button Content="&#xE713;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="44"
                        Height="44"
                        Click="NavigationButton_Click"
                        Tag="Settings"
                        ToolTipService.ToolTip="Settings"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,16,0,0" />
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Style="{StaticResource ContentAreaStyle}">
            <StackPanel Spacing="16">
                <TextBlock x:Name="ContentTitle"
                          Text="Odin - OpenSpec" 
                          Style="{StaticResource HeadingTextBlockStyle}" />
                
                <TextBlock Text="Task 6: Navigation Sidebar - In Progress" 
                          Style="{StaticResource SubheadingTextBlockStyle}" />
                
                <Border Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock x:Name="ContentMessage"
                                  Text="Welcome to your personal productivity hub!" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        
                        <Button Content="Toggle Theme" 
                               Style="{StaticResource TouchButtonStyle}"
                               Click="ToggleThemeButton_Click" />
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Navigation Sidebar Features:" 
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  FontWeight="SemiBold" />
                        <TextBlock Text="✅ Static navigation layout with module buttons" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="✅ Touch-friendly button sizing (44px minimum)" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="✅ Module selection handling with visual states" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="✅ Expand/collapse animations (200ms CubicEase)" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="✅ Collapsed sidebar with icon-only navigation" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="✅ Smooth width transitions (250px ↔ 60px)" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="✅ Touch gesture support (swipe from edge)" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="✅ Navigation state persistence in SQLite" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="⏳ Keyboard navigation support (Tab + arrows)" 
                                  Style="{StaticResource BodyTextBlockStyle}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
