<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Odin___OpenSpec.Views.CreateProfileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Odin___OpenSpec.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create Profile"
    PrimaryButtonText="Create"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    CloseButtonClick="ContentDialog_CloseButtonClick">

    <StackPanel Spacing="16" Padding="0,8,0,0">
        <!-- Profile Photo Section -->
        <StackPanel Spacing="12" HorizontalAlignment="Center">
            <PersonPicture x:Name="ProfilePicture"
                          Width="120"
                          Height="120"
                          Initials="?"
                          DisplayName="New User" />
            
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <Button x:Name="SelectPhotoButton"
                       Content="Select Photo"
                       Click="SelectPhotoButton_Click"
                       MinWidth="120"
                       Height="40" />
                
                <Button x:Name="RemovePhotoButton"
                       Content="Remove"
                       Click="RemovePhotoButton_Click"
                       Height="40"
                       IsEnabled="False" />
            </StackPanel>
        </StackPanel>

        <!-- Name Input -->
        <StackPanel Spacing="8">
            <TextBlock Text="Name *" 
                      FontWeight="SemiBold"
                      FontSize="14" />
            
            <TextBox x:Name="NameTextBox"
                    PlaceholderText="Enter your name"
                    MaxLength="100"
                    TextChanged="NameTextBox_TextChanged" />
            
            <TextBlock x:Name="NameErrorText"
                      Text="Name is required"
                      Foreground="{ThemeResource SystemErrorTextColor}"
                      FontSize="12"
                      Visibility="Collapsed" />
        </StackPanel>

        <!-- Profile Type (Optional) -->
        <StackPanel Spacing="8">
            <TextBlock Text="Profile Type" 
                      FontWeight="SemiBold"
                      FontSize="14" />
            
            <ComboBox x:Name="ProfileTypeComboBox"
                     PlaceholderText="Select profile type (optional)"
                     Width="300"
                     HorizontalAlignment="Stretch">
                <ComboBoxItem Content="Personal" IsSelected="True" />
                <ComboBoxItem Content="Work" />
                <ComboBoxItem Content="Family" />
                <ComboBoxItem Content="Other" />
            </ComboBox>
        </StackPanel>

        <!-- Info Text -->
        <TextBlock Text="Create a new profile to personalize your experience. You can add a photo and customize settings for this profile."
                  TextWrapping="Wrap"
                  Opacity="0.7"
                  FontSize="12"
                  Margin="0,8,0,0" />
    </StackPanel>
</ContentDialog>
